powerenv_load env \
	LS_COLORS='*.ogg=38;5;45:*.wav=38;5;45' \
	LESSOPEN='||/usr/bin/lesspipe.sh %s' \
	THREE_BACKSLASHES='\\\' \
	bash -c "echo to stdout && echo to stderr >&2 && powerenv dump"

log_status "powerenv_load would previously hang if powerenv_DUMP_FILE_PATH was not opened."
log_status "Expect the following to emit an error (which we suppress)."
log_status "As long as it doesn't hang, we're okay."
powerenv_load true || true
